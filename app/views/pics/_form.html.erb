<div class="container center col-md-10">
<%= simple_form_for pic, defaults: { input_html: { class: 'col-md-5', style: 'margin: 0 auto;' } } do |f| %>
  <%= f.input :title,required: true, error: 'title not nil!' %>
  <%= f.input :description,{ input_html: { rows:  5 } } %>
  <%= f.input :image, {input_html: {class: 'form-control col-md-5'}} %>
  <%= f.button :submit, {class: 'btn btn-sm btn-primary'} %>
<% end %>
</div>
